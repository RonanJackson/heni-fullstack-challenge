    "express": "^4.17.1"
  },
  "devDependencies": {
    "chai": "^4.3.4",
    "concurrently": "^6.2.1",
    "mocha": "8.3.2",
    "nock": "^13.1.3",
    "supertest": "^6.1.6"
  }
